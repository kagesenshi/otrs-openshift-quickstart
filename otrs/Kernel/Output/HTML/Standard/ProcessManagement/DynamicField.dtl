<!-- dtl:block:rw:DynamicField -->
<div class="Row Row_DynamicField_$Data{"Name"}">
<!-- dtl:block:rw:DynamicField:DescriptionLong -->
    <span class="FieldHelpContainer">
        <i class="icon-question-sign FieldHelpTrigger"></i>
        <span>$QData{"DescriptionLong"}</span>
    </span>
<!-- dtl:block:rw:DynamicField:DescriptionLong -->
    $Data{"Label"}
    <div class="Field">
        $Data{"Content"}
<!-- dtl:block:rw:DynamicField:DescriptionShort -->
        <div class="FieldExplanation">$Data{"DescriptionShort"}</div>
<!-- dtl:block:rw:DynamicField:DescriptionShort -->
    </div>
    <div class="Clear"></div>
</div>
<!-- dtl:block:rw:DynamicField -->
