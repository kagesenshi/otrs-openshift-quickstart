<!-- dtl:block:SearchAJAXShow -->
        Core.Agent.Search.SearchAttributeAdd("$QData{"Attribute"}");
<!-- dtl:block:SearchAJAXShow -->
        Core.Agent.Search.AdditionalAttributeSelectionRebuild();
    }, 0);
//]]></script>

